<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreditsActivity"
    android:background="#313E50">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/devteam"
        android:textSize="30sp"
        android:textColor="#fff"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lawrence Douglas\nAdam Holbert\nAndrew Sylvester\nBrad Gustafson\n"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#fff"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/musicassets"
        android:textSize="30sp"
        android:textColor="#fff"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Music by Eric Matyas\nwww.soundimage.org"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#fff"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/otherassets"
        android:textSize="30sp"
        android:textColor="#fff"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All assests done by Lawrence Douglas"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#fff"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/backbutton"
            android:layout_width="342dp"
            android:layout_height="78dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="#000"
            android:text="Back"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

</LinearLayout>
</android.widget.ScrollView>